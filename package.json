{
  "name": "personal-site",
  "version": "1.0.0",
  "main": ".eleventy.js",
  "author": "Miguel Fondeur",
  "license": "ISC",
  "description": "My Personal Site built with 11ty",
  "devDependencies": {
    "@11ty/eleventy": "^3.0.0",
    "esbuild": "^0.25.0",
    "npm-run-all": "^4.1.5"
  },
  "dependencies": {
    "@11ty/eleventy-plugin-syntaxhighlight": "^5.0.0"
  },
  "scripts": {
    "start": "eleventy --serve",
    "build": "eleventy",
    "css:watch": "esbuild src/css/main.css --bundle --minify --outfile=public/css/main.min.css --watch",
    "eleventy:serve": "eleventy --serve",
    "dev": "npm-run-all --parallel css:watch eleventy:serve",
    "test": "echo \"Error: no test specified\" && exit 1"
  }
}
